<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/backgroundButton</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MenuButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/backgroundButton</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:padding">15dp</item>
        <item name="borderWidth">35dp</item>
        <item name="strokeColor">@color/backgroundButton</item>
        <item name="strokeWidth">4dp</item>
    </style>

    <style name="MenuTitle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Title" parent="TextAppearance.AppCompat.Headline">
        <item name="fontFamily">@font/bauh93</item>
        <item name="android:textColor">@color/backgroundButton</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">30dp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1.6</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginVertical">50dp</item>
    </style>

    <style name="Profile_Text" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/hobo</item>
        <item name="android:layout_marginVertical">15dp</item>
    </style>

</resources>
