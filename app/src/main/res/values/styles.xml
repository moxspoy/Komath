<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/backgroundButton</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MenuButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">#002766</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_marginEnd">-15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/comfortaa</item>
    </style>

    <style name="MenuTitle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Title" parent="TextAppearance.AppCompat.Headline">
        <item name="fontFamily">@font/bauh93</item>
        <item name="android:textColor">@color/backgroundButton</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">30dp</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1.6</item>
        <item name="android:textSize">28dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginBottom">50dp</item>
    </style>

    <style name="Profile_Text" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/hobo</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="ImageIndicator">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="OptionButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="strokeColor">@color/blue</item>
        <item name="strokeWidth">4dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="fontFamily">@font/tnri</item>
    </style>

    <style name="OptionButtonCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="strokeColor">@color/blue</item>
        <item name="strokeWidth">4dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:background">@color/white</item>
        <item name="fontFamily">@font/tnri</item>
    </style>

    <style name="OptionButtonCardText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

</resources>
