<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:background="@drawable/background_menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            style="@style/MenuTitle"
            android:text="Menu Utama" />
        <com.google.android.material.button.MaterialButton
            style="@style/MenuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_1"
            android:text="Petunjuk Penggunaan"
            app:icon="@drawable/ic_guide_white24dp"
            app:iconSize="@dimen/menu_icon_size">
        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            style="@style/MenuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_2"
            android:text="KI, KD, Indikator"
            app:icon="@drawable/ic_kikd_white_24dp"
            app:iconSize="@dimen/menu_icon_size">
        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            style="@style/MenuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_3"
            android:text="Pengenalan Tokoh"
            app:icon="@drawable/ic_tokoh_24dp"
            app:iconSize="@dimen/menu_icon_size">
        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            style="@style/MenuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_4"
            android:text="Daftar Cerita"
            app:icon="@drawable/ic_daftar_cerita_24dp"
            app:iconSize="@dimen/menu_icon_size">
        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            style="@style/MenuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_5"
            android:text="Rangkuman"
            app:icon="@drawable/ic_rangkuman24dp"
            app:iconSize="@dimen/menu_icon_size">
        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            style="@style/MenuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_6"
            android:text="Profil"
            app:icon="@drawable/ic_profile_24dp"
            app:iconSize="@dimen/menu_icon_size">
        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            style="@style/MenuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_7"
            android:text="Tentang Aplikasi"
            app:icon="@drawable/ic_tentang_24dp"
            app:iconSize="@dimen/menu_icon_size">
        </com.google.android.material.button.MaterialButton>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>